@model Demo.Models.Contact
@{
    ViewData["Title"] = "Create Contact";
}

<div class="d-flex justify-content-center align-items-center fade-in" style="min-height:80vh;">
    <div class="card card-glow p-5" style="max-width:600px; width:100%;">
        <h2 class="text-center mb-4 text-info fw-bold">
            <i class="fa-solid fa-envelope me-2"></i> Create Contact
        </h2>

        <form asp-action="Create" method="post">
            <div class="mb-3">
                <label asp-for="Name" class="form-label fw-semibold text-light"></label>
                <div class="input-group">
                    <span class="input-group-text bg-dark text-info border-secondary">
                        <i class="fa-solid fa-user"></i>
                    </span>
                    <input asp-for="Name" class="form-control bg-dark text-light border-secondary" placeholder="Enter your name" />
                </div>
                <span asp-validation-for="Name" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label fw-semibold text-light"></label>
                <div class="input-group">
                    <span class="input-group-text bg-dark text-info border-secondary">
                        <i class="fa-solid fa-at"></i>
                    </span>
                    <input asp-for="Email" class="form-control bg-dark text-light border-secondary" placeholder="you@example.com" />
                </div>
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Subject" class="form-label fw-semibold text-light"></label>
                <div class="input-group">
                    <span class="input-group-text bg-dark text-info border-secondary">
                        <i class="fa-solid fa-tag"></i>
                    </span>
                    <input asp-for="Subject" class="form-control bg-dark text-light border-secondary" placeholder="Subject..." />
                </div>
                <span asp-validation-for="Subject" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Message" class="form-label fw-semibold text-light"></label>
                <textarea asp-for="Message" rows="4" class="form-control bg-dark text-light border-secondary" placeholder="Type your message..."></textarea>
                <span asp-validation-for="Message" class="text-danger small"></span>
            </div>

            <div class="d-flex justify-content-between align-items-center mt-4">
                <a asp-action="Index" class="btn btn-outline-light px-4 rounded-pill">
                    <i class="fa-solid fa-arrow-left"></i> Back
                </a>
                <button type="submit" class="btn btn-fancy px-4 rounded-pill">
                    <i class="fa-solid fa-paper-plane"></i> Submit
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script>
        document.querySelector('.card-glow').classList.add('fade-in');
    </script>
}
