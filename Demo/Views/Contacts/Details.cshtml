@model Demo.Models.Contact

@{
    ViewData["Title"] = "Contact Details";
}

<style>
    body {
        background-color: #1e2a38;
        color: #e0e0e0;
        font-family: 'Segoe UI', sans-serif;
    }

    h1 {
        text-align: center;
        color: #9cc4ff;
        margin-top: 1rem;
        letter-spacing: 1px;
    }

    .details-card {
        background-color: #2e3b4e;
        border-radius: 16px;
        padding: 2rem;
        max-width: 500px;
        margin: 2rem auto;
        box-shadow: 0 4px 20px rgba(0,0,0,0.4);
        position: relative;
        transition: transform 0.3s ease;
    }

        .details-card:hover {
            transform: translateY(-5px);
        }

    .detail-item {
        margin-bottom: 1rem;
    }

    .detail-label {
        color: #9cc4ff;
        font-weight: 600;
        display: block;
        margin-bottom: 0.25rem;
    }

    .detail-value {
        color: #ffffff;
    }

    .floating-buttons {
        position: fixed;
        bottom: 30px;
        right: 30px;
        display: flex;
        flex-direction: column;
        gap: 12px;
    }

        .floating-buttons a {
            background-color: #007bff;
            color: white;
            border-radius: 50%;
            padding: 14px 16px;
            text-decoration: none;
            font-size: 18px;
            box-shadow: 0 4px 10px rgba(0,0,0,0.3);
            transition: all 0.3s ease;
        }

            .floating-buttons a:hover {
                background-color: #0056b3;
                transform: scale(1.1);
            }
</style>

<h1>Contact Details</h1>

<div class="details-card">
    <div class="detail-item">
        <span class="detail-label">Name</span>
        <span class="detail-value">@Model.Name</span>
    </div>
    <div class="detail-item">
        <span class="detail-label">Email</span>
        <span class="detail-value">@Model.Email</span>
    </div>
    <div class="detail-item">
        <span class="detail-label">Subject</span>
        <span class="detail-value">@Model.Subject</span>
    </div>
    <div class="detail-item">
        <span class="detail-label">Message</span>
        <span class="detail-value">@Model.Message</span>
    </div>
</div>

<div class="floating-buttons">
    <a asp-action="Edit" asp-route-id="@Model.Id" title="Edit">
        <i class="bi bi-pencil"></i>
    </a>
    <a asp-action="Index" title="Back">
        <i class="bi bi-arrow-left"></i>
    </a>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
