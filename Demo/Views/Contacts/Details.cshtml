@model Demo.Models.Contact
@{
    ViewData["Title"] = "Contact Details";
}

<div class="d-flex justify-content-center align-items-center fade-in" style="min-height:80vh;">
    <div class="card card-glow p-5 text-center" style="max-width:550px; width:100%;">
        <h2 class="text-info fw-bold mb-4">
            <i class="fa-solid fa-address-card me-2"></i> Contact Details
        </h2>

        <div class="text-start bg-dark border border-secondary rounded-3 p-4 mb-4">
            <p class="mb-2"><strong class="text-info">Name:</strong> <span class="text-light">@Model.Name</span></p>
            <p class="mb-2"><strong class="text-info">Email:</strong> <span class="text-light">@Model.Email</span></p>
            <p class="mb-2"><strong class="text-info">Subject:</strong> <span class="text-light">@Model.Subject</span></p>
            <p class="mb-0"><strong class="text-info">Message:</strong> <span class="text-light">@Model.Message</span></p>
        </div>

        <div class="d-flex justify-content-center gap-3">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-fancy px-4 rounded-pill">
                <i class="fa-solid fa-pen"></i> Edit
            </a>
            <a asp-action="Index" class="btn btn-outline-light px-4 rounded-pill">
                <i class="fa-solid fa-arrow-left"></i> Back
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.querySelector('.card-glow').classList.add('fade-in');
    </script>
}
