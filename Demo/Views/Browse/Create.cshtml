@model Demo.Models.ViewModels.Browse.CreatePartVm

@{
    ViewData["Title"] = $"Add New {Model.PartType}";
}

<div class="container py-4" style="color:#e9ecef;">

    <div class="mb-3">
        <a asp-action="Index"
           asp-route-partType="@Model.PartType"
           class="btn btn-outline-info">
            ← Back to Browse
        </a>
    </div>

    <div class="card box-shadow" style="background:#111827; border:1px solid rgba(255,255,255,.12);">
        <div class="card-body">

            <h3 class="mb-4" style="color:#61dafb;">Add New @Model.PartType</h3>

            <div asp-validation-summary="All" class="text-warning mb-3"></div>

            <form asp-action="Create" method="post" enctype="multipart/form-data">
                @Html.AntiForgeryToken()

                <input type="hidden" asp-for="PartType" />

                <div class="row g-3">
                    <div class="col-12">
                        <label asp-for="Name" class="form-label text-white-50"></label>
                        <input asp-for="Name" class="form-control"
                               style="background:#0b1220; color:#e9ecef; border:1px solid rgba(255,255,255,.15);" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="col-12 col-md-6">
                        <label asp-for="Brand" class="form-label text-white-50"></label>
                        <input asp-for="Brand" class="form-control"
                               style="background:#0b1220; color:#e9ecef; border:1px solid rgba(255,255,255,.15);" />
                        <span asp-validation-for="Brand" class="text-danger"></span>
                    </div>

                    <div class="col-12 col-md-6">
                        <label asp-for="Price" class="form-label text-white-50"></label>
                        <input asp-for="Price" type="number" step="0.01" class="form-control"
                               style="background:#0b1220; color:#e9ecef; border:1px solid rgba(255,255,255,.15);" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>

                    <div class="col-12">
                        <label class="form-label text-white-50">Image Upload</label>
                        <input asp-for="ImageFile" type="file" accept="image/*" class="form-control"
                               style="background:#0b1220; color:#e9ecef; border:1px solid rgba(255,255,255,.15);" />
                        <span asp-validation-for="ImageFile" class="text-danger"></span>
                    </div>

                    <div class="col-12">
                        <label asp-for="Description" class="form-label text-white-50"></label>
                        <textarea asp-for="Description" rows="4" class="form-control"
                                  style="background:#0b1220; color:#e9ecef; border:1px solid rgba(255,255,255,.15);"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>

                <hr class="my-4" style="border-color:rgba(255,255,255,.12);" />

                <!-- Your existing part-specific blocks can stay exactly as you had them -->
                @* keep your if/else specs block here unchanged *@

                <div class="mt-4 d-flex gap-2">
                    <button type="submit" class="btn btn-info text-dark fw-semibold">Create</button>
                    <a asp-action="Index" asp-route-partType="@Model.PartType" class="btn btn-outline-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}