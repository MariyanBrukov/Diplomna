@model Demo.ViewModels.Browse.CreatePartVm

@{
    ViewData["Title"] = $"Add New {Model.PartType}";
}

<div class="container py-4">

    <div class="mb-3">
        <a asp-action="Index"
           asp-route-partType="@Model.PartType"
           class="btn btn-outline-secondary">
            ← Back to Browse
        </a>
    </div>

    <div class="card box-shadow">
        <div class="card-body">

            <h3 class="mb-4">Add New @Model.PartType</h3>

            <form asp-action="Create" method="post">
                @Html.AntiForgeryToken()

                <input type="hidden" asp-for="PartType" />

                <!-- ================= COMMON FIELDS ================= -->
                <div class="row g-3">

                    <div class="col-12">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="col-12 col-md-6">
                        <label asp-for="Brand" class="form-label"></label>
                        <input asp-for="Brand" class="form-control" />
                        <span asp-validation-for="Brand" class="text-danger"></span>
                    </div>

                    <div class="col-12 col-md-6">
                        <label asp-for="Price" class="form-label"></label>
                        <input asp-for="Price" type="number" step="0.01" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>

                    <div class="col-12">
                        <label asp-for="ImageUrl" class="form-label"></label>
                        <input asp-for="ImageUrl" class="form-control" />
                        <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    </div>

                    <div class="col-12">
                        <label asp-for="Description" class="form-label"></label>
                        <textarea asp-for="Description" rows="4" class="form-control"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>

                <hr class="my-4" />

                <!-- ================= PART-SPECIFIC FIELDS ================= -->
                @if (Model.PartType == Demo.Models.PartType.CPU)
                {
                    <h5 class="mb-3">CPU Specifications</h5>
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label asp-for="Socket" class="form-label"></label>
                            <input asp-for="Socket" class="form-control" />
                        </div>
                        <div class="col-md-3">
                            <label asp-for="Cores" class="form-label"></label>
                            <input asp-for="Cores" type="number" class="form-control" />
                        </div>
                        <div class="col-md-3">
                            <label asp-for="ClockSpeedGHz" class="form-label">Clock Speed (GHz)</label>
                            <input asp-for="ClockSpeedGHz" type="number" step="0.1" class="form-control" />
                        </div>
                    </div>
                }
                else if (Model.PartType == Demo.Models.PartType.GPU)
                {
                    <h5 class="mb-3">GPU Specifications</h5>
                    <div class="row g-3">
                        <div class="col-md-4">
                            <label asp-for="MemoryGB" class="form-label">Memory (GB)</label>
                            <input asp-for="MemoryGB" type="number" class="form-control" />
                        </div>
                        <div class="col-md-8">
                            <label asp-for="Chipset" class="form-label"></label>
                            <input asp-for="Chipset" class="form-control" />
                        </div>
                    </div>
                }
                else if (Model.PartType == Demo.Models.PartType.RAM)
                {
                    <h5 class="mb-3">RAM Specifications</h5>
                    <div class="row g-3">
                        <div class="col-md-4">
                            <label asp-for="CapacityGB" class="form-label">Capacity (GB)</label>
                            <input asp-for="CapacityGB" type="number" class="form-control" />
                        </div>
                        <div class="col-md-4">
                            <label asp-for="RamType" class="form-label">Type</label>
                            <input asp-for="RamType" class="form-control" placeholder="DDR4 / DDR5" />
                        </div>
                        <div class="col-md-4">
                            <label asp-for="SpeedMHz" class="form-label">Speed (MHz)</label>
                            <input asp-for="SpeedMHz" type="number" class="form-control" />
                        </div>
                    </div>
                }
                else if (Model.PartType == Demo.Models.PartType.Motherboard)
                {
                    <h5 class="mb-3">Motherboard Specifications</h5>
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label asp-for="Socket" class="form-label"></label>
                            <input asp-for="Socket" class="form-control" />
                        </div>
                        <div class="col-md-6">
                            <label asp-for="FormFactor" class="form-label"></label>
                            <input asp-for="FormFactor" class="form-control" placeholder="ATX, Micro-ATX" />
                        </div>
                    </div>
                }
                else if (Model.PartType == Demo.Models.PartType.PowerSupply)
                {
                    <h5 class="mb-3">Power Supply Specifications</h5>
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label asp-for="Wattage" class="form-label"></label>
                            <input asp-for="Wattage" type="number" class="form-control" />
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Efficiency" class="form-label"></label>
                            <input asp-for="Efficiency" class="form-control" placeholder="80+ Gold" />
                        </div>
                    </div>
                }
                else if (Model.PartType == Demo.Models.PartType.Storage)
                {
                    <h5 class="mb-3">Storage Specifications</h5>
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label asp-for="StorageType" class="form-label">Type</label>
                            <input asp-for="StorageType" class="form-control" placeholder="NVMe SSD / SSD / HDD" />
                        </div>
                        <div class="col-md-6">
                            <label asp-for="CapacityGB" class="form-label">Capacity (GB)</label>
                            <input asp-for="CapacityGB" type="number" class="form-control" />
                        </div>
                    </div>
                }
                else if (Model.PartType == Demo.Models.PartType.Case)
                {
                    <h5 class="mb-3">Case Specifications</h5>
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label asp-for="FormFactor" class="form-label"></label>
                            <input asp-for="FormFactor" class="form-control" placeholder="ATX, Mini-ITX" />
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Color" class="form-label"></label>
                            <input asp-for="Color" class="form-control" />
                        </div>
                    </div>
                }

                <div class="mt-4 d-flex gap-2">
                    <button type="submit" class="btn btn-primary">
                        Create
                    </button>

                    <a asp-action="Index"
                       asp-route-partType="@Model.PartType"
                       class="btn btn-outline-secondary">
                        Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
