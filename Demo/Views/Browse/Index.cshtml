@model Demo.Models.ViewModels.Browse.BrowseIndexVm

@{
    ViewData["Title"] = "Browse Parts";
    var currentType = Model.Filter.PartType ?? Demo.Models.PartType.CPU;
}

<div class="container py-3">

    <div class="d-flex justify-content-between align-items-center mb-3 flex-wrap gap-2">
        <div>
            <h2 class="mb-0" style="color:#61dafb;">Browse Parts</h2>
            <small class="text-white-50">View items by category and filter by price, brand, and capability.</small>
        </div>

        <div class="d-flex gap-2">
            <a class="btn btn-info text-dark fw-semibold"
               asp-action="Create"
               asp-route-partType="@currentType">
                + Add New Item
            </a>
        </div>
    </div>

    <!-- Part type tabs -->
    <ul class="nav nav-pills mb-3 flex-wrap">
        @foreach (Demo.Models.PartType t in Enum.GetValues(typeof(Demo.Models.PartType)))
        {
            var isActive = currentType == t;
            <li class="nav-item me-2 mb-2">
                <a class="nav-link @(isActive ? "active" : "")"
                   asp-action="Index"
                   asp-route-partType="@t">
                    @t
                </a>
            </li>
        }
    </ul>

    <div class="row g-3">
        <!-- Filters -->
        <div class="col-12 col-lg-3">
            <div class="card box-shadow" style="background:#111827; border:1px solid rgba(255,255,255,.12);">
                <div class="card-body">
                    <h5 class="card-title" style="color:#61dafb;">Filters</h5>
                    <partial name="_Filters" model="Model" />
                </div>
            </div>
        </div>

        <!-- Results -->
        <div class="col-12 col-lg-9">
            <div class="d-flex justify-content-between align-items-center mb-2">
                <div class="text-white-50 small">
                    Showing <strong class="text-white">@Model.Items.Count</strong> item(s)
                </div>
            </div>

            @if (Model.Items.Count == 0)
            {
                <div class="card box-shadow" style="background:#111827; border:1px solid rgba(255,255,255,.12);">
                    <div class="card-body text-white-50">
                        No items found. Try widening your filters.
                    </div>
                </div>
            }
            else
            {
                <div class="row g-3">
                    @foreach (var item in Model.Items)
                    {
                        <div class="col-12 col-md-6 col-xl-4">
                            <div class="card h-100 box-shadow"
                                 style="background:#111827; border:1px solid rgba(255,255,255,.12);">

                                <div style="height:170px; background:#0b1220; border-bottom:1px solid rgba(255,255,255,.12);"
                                     class="d-flex align-items-center justify-content-center overflow-hidden rounded-top">
                                    @if (!string.IsNullOrWhiteSpace(item.ImageUrl))
                                    {
                                        <img src="@item.ImageUrl"
                                             alt="@item.Name"
                                             style="width:100%; height:100%; object-fit:cover;" />
                                    }
                                    else
                                    {
                                        <span class="text-white-50 small">No image</span>
                                    }
                                </div>

                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-start gap-2">
                                        <div>
                                            <div class="fw-semibold" style="color:#e9ecef;">@item.Name</div>
                                            <div class="text-white-50 small">@item.Brand</div>
                                        </div>
                                        <span class="badge bg-info text-dark">@item.PartType</span>
                                    </div>

                                    @if (!string.IsNullOrWhiteSpace(item.ShortSpec))
                                    {
                                        <div class="text-white-50 small mt-2">@item.ShortSpec</div>
                                    }

                                    <div class="mt-3 fw-bold" style="color:#61dafb;">$@item.Price</div>

                                    <div class="mt-3 d-flex gap-2">
                                        <a class="btn btn-sm btn-outline-info"
                                           asp-action="Details"
                                           asp-route-partType="@item.PartType"
                                           asp-route-id="@item.Id">
                                            Details
                                        </a>

                                        <a class="btn btn-sm btn-outline-secondary"
                                           asp-action="Edit"
                                           asp-route-partType="@item.PartType"
                                           asp-route-id="@item.Id">
                                            Edit
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>