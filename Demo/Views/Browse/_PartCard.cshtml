@using Demo.Models.ViewModels.Browse
@model BrowseItemVm

<div class="card h-100 box-shadow" style="background:#111827; border:1px solid rgba(255,255,255,.12); color:#e9ecef;">
    @if (!string.IsNullOrWhiteSpace(Model.ImageUrl))
    {
        <img src="@Model.ImageUrl"
             class="card-img-top"
             alt="@Model.Name"
             style="object-fit:cover; height:180px;" />
    }
    else
    {
        <div class="d-flex align-items-center justify-content-center"
             style="height:180px; background:#0b1220; border-bottom:1px solid rgba(255,255,255,.12);">
            <span class="text-white-50">No image</span>
        </div>
    }

    <div class="card-body d-flex flex-column">
        <h5 class="card-title mb-1" style="color:#61dafb;">@Model.Name</h5>
        <div class="text-white-50 mb-2">@Model.Brand</div>

        <div class="fw-bold mb-2">$@Model.Price</div>

        @if (!string.IsNullOrWhiteSpace(Model.ShortSpec))
        {
            <div class="small text-white-50 mb-3">@Model.ShortSpec</div>
        }

        <div class="mt-auto d-flex gap-2">
            <a class="btn btn-outline-info flex-grow-1"
               asp-action="Details"
               asp-route-partType="@Model.PartType"
               asp-route-id="@Model.Id">
                View
            </a>

            <a class="btn btn-outline-secondary"
               asp-action="Edit"
               asp-route-partType="@Model.PartType"
               asp-route-id="@Model.Id">
                Edit
            </a>
        </div>
    </div>
</div>
