@{
    ViewData["Title"] = "Home";
}

<section style="text-align: center; margin-top: 4rem;">
    <h2 style="font-size: 2.5rem; color: #2f3b52;">Welcome to Pc Junkie</h2>
    <p style="font-size: 1.2rem; color: #444; max-width: 700px; margin: 1rem auto;">
        Your one-stop destination for custom PC builds, expert advice, and a community of enthusiasts.
        Browse builds, get in touch, or join us by registering today!
    </p>

    <div style="margin-top: 2rem;">
        <a asp-controller="Builds" asp-action="Index"
           style="background-color:#2f3b52; color:white; padding:0.8rem 1.4rem; border-radius:8px; text-decoration:none; transition:all 0.2s ease-in-out; margin:0.5rem; display:inline-block;">
            View Builds
        </a>

        <a asp-controller="Contacts" asp-action="Index"
           style="background-color:#3d4d6a; color:white; padding:0.8rem 1.4rem; border-radius:8px; text-decoration:none; transition:all 0.2s ease-in-out; margin:0.5rem; display:inline-block;">
            Contact Us
        </a>
    </div>
</section>
