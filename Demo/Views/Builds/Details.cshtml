@model Demo.Models.Build
@{
    ViewData["Title"] = "Build Details";
}

<div class="card card-glow p-4">
    <h2 class="mb-4 text-center text-info"><i class="fa-solid fa-eye"></i> @Model.BuildName</h2>
    <dl class="row">
        <dt class="col-sm-3">CPU</dt>
        <dd class="col-sm-9">@Model.CPU?.Name</dd>
        <dt class="col-sm-3">GPU</dt>
        <dd class="col-sm-9">@Model.GPU?.Name</dd>
        <dt class="col-sm-3">Motherboard</dt>
        <dd class="col-sm-9">@Model.Motherboard?.Name</dd>
        <dt class="col-sm-3">RAM</dt>
        <dd class="col-sm-9">@Model.RAM?.Name</dd>
        <dt class="col-sm-3">Storage</dt>
        <dd class="col-sm-9">@Model.Storage?.Name</dd>
        <dt class="col-sm-3">Power Supply</dt>
        <dd class="col-sm-9">@Model.PowerSupply?.Name</dd>
        <dt class="col-sm-3">Case</dt>
        <dd class="col-sm-9">@Model.Case?.Name</dd>
        <dt class="col-sm-3 text-success">Total Price</dt>
        <dd class="col-sm-9 text-success fw-bold">@Model.TotalPrice.ToString("C")</dd>
    </dl>

    <div class="text-center">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2"><i class="fa-solid fa-pen"></i> Edit</a>
        <a asp-action="Index" class="btn btn-outline-light">Back to List</a>
    </div>
</div>
