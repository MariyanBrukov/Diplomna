@model Demo.Models.Build
@{
    ViewData["Title"] = "Delete Build";
}

<div class="card card-glow p-4 text-center">
    <h3 class="text-danger mb-3"><i class="fa-solid fa-triangle-exclamation"></i> Delete Confirmation</h3>
    <p>Are you sure you want to delete <strong>@Model.BuildName</strong>?</p>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger me-2">
            <i class="fa-solid fa-trash"></i> Delete
        </button>
        <a asp-action="Index" class="btn btn-outline-light">Cancel</a>
    </form>
</div>
