@model IEnumerable<Demo.Models.Build>
@{
    ViewData["Title"] = "My Builds";
}

<h1 class="mb-4 text-center"><i class="fa-solid fa-screwdriver-wrench"></i> My Builds</h1>

<p class="text-center">
    <a asp-action="Create" class="btn btn-fancy"><i class="fa-solid fa-plus-circle"></i> Create New Build</a>
</p>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card card-glow h-100 p-3">
                <div class="card-body">
                    <h5 class="card-title text-info">@item.BuildName</h5>
                    <p class="mb-1"><strong>CPU:</strong> @item.CPU?.Name</p>
                    <p class="mb-1"><strong>GPU:</strong> @item.GPU?.Name</p>
                    <p class="mb-1"><strong>Motherboard:</strong> @item.Motherboard?.Name</p>
                    <p class="mb-1"><strong>RAM:</strong> @item.RAM?.Name</p>
                    <p class="mb-1"><strong>Storage:</strong> @item.Storage?.Name</p>
                    <p class="mb-1"><strong>Power Supply:</strong> @item.PowerSupply?.Name</p>
                    <p class="mb-3"><strong>Case:</strong> @item.Case?.Name</p>
                    <h5 class="text-success"><strong>Total:</strong> @item.TotalPrice.ToString("C")</h5>
                </div>
                <div class="card-footer text-center">
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info me-2"><i class="fa-solid fa-eye"></i></a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning me-2"><i class="fa-solid fa-pen"></i></a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger"><i class="fa-solid fa-trash"></i></a>
                </div>
            </div>
        </div>
    }
</div>
