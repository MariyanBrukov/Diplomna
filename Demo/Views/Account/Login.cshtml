@model global::Demo.Models.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="d-flex justify-content-center align-items-center" style="min-height:80vh;">
    <div class="card card-glow p-5 text-center" style="max-width:420px; width:100%;">
        <h2 class="mb-4 text-info fw-bold">
            <i class="fa-solid fa-right-to-bracket"></i> Sign In
        </h2>

        <form asp-action="Login" method="post" class="text-start">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="All" class="text-warning small mb-3"></div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label fw-semibold text-light"></label>
                <div class="input-group">
                    <span class="input-group-text bg-dark text-info border-secondary">
                        <i class="fa-solid fa-envelope"></i>
                    </span>
                    <input asp-for="Email" class="form-control bg-dark text-light border-secondary" placeholder="you@example.com" />
                </div>
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label fw-semibold text-light"></label>
                <div class="input-group">
                    <span class="input-group-text bg-dark text-info border-secondary">
                        <i class="fa-solid fa-lock"></i>
                    </span>
                    <input asp-for="Password" type="password" class="form-control bg-dark text-light border-secondary" placeholder="••••••••" />
                </div>
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <div class="d-grid mt-4">
                <button type="submit" class="btn btn-fancy py-2 fw-semibold">
                    <i class="fa-solid fa-arrow-right-to-bracket"></i> Login
                </button>
            </div>
        </form>

        <div class="mt-4">
            <p class="text-muted mb-0">
                Don’t have an account?
                <a asp-action="Register" class="text-info fw-semibold text-decoration-none">
                    Register here
                </a>
            </p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.querySelector('.card-glow')?.classList.add('fade-in');
    </script>
}