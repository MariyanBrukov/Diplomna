@model Demo.Models.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<div class="d-flex justify-content-center align-items-center" style="min-height:80vh;">
    <div class="card card-glow p-5 text-center" style="max-width:460px; width:100%;">
        <h2 class="mb-4 text-info fw-bold">
            <i class="fa-solid fa-user-plus"></i> Create Your Account
        </h2>

        <form asp-action="Register" method="post" class="text-start">
            <div class="mb-3">
                <label asp-for="Username" class="form-label fw-semibold text-light"></label>
                <div class="input-group">
                    <span class="input-group-text bg-dark text-info border-secondary">
                        <i class="fa-solid fa-user"></i>
                    </span>
                    <input asp-for="Username" class="form-control bg-dark text-light border-secondary" placeholder="Your username" />
                </div>
                <span asp-validation-for="Username" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label fw-semibold text-light"></label>
                <div class="input-group">
                    <span class="input-group-text bg-dark text-info border-secondary">
                        <i class="fa-solid fa-envelope"></i>
                    </span>
                    <input asp-for="Email" class="form-control bg-dark text-light border-secondary" placeholder="you@example.com" />
                </div>
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label fw-semibold text-light"></label>
                <div class="input-group">
                    <span class="input-group-text bg-dark text-info border-secondary">
                        <i class="fa-solid fa-lock"></i>
                    </span>
                    <input asp-for="Password" type="password" class="form-control bg-dark text-light border-secondary" placeholder="••••••••" />
                </div>
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ConfirmPassword" class="form-label fw-semibold text-light"></label>
                <div class="input-group">
                    <span class="input-group-text bg-dark text-info border-secondary">
                        <i class="fa-solid fa-lock"></i>
                    </span>
                    <input asp-for="ConfirmPassword" type="password" class="form-control bg-dark text-light border-secondary" placeholder="Confirm password" />
                </div>
                <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
            </div>

            <div class="d-grid mt-4">
                <button type="submit" class="btn btn-fancy py-2 fw-semibold">
                    <i class="fa-solid fa-user-check"></i> Register
                </button>
            </div>
        </form>

        <div class="mt-4">
            <p class="text-muted mb-0">
                Already have an account?
                <a asp-action="Login" class="text-info fw-semibold text-decoration-none">Login here</a>
            </p>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script>
        // subtle fade animation
        document.querySelector('.card-glow').classList.add('fade-in');
    </script>
}
