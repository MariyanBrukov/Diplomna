@model Demo.Models.ErrorViewModel

@{
    ViewData["Title"] = "Error";
}

<div class="container py-5" style="color:#e9ecef;">
    <div class="card box-shadow" style="background:#111827; border:1px solid rgba(255,255,255,.12);">
        <div class="card-body">
            <h2 class="mb-2" style="color:#61dafb;">Something went wrong</h2>
            <p class="text-white-50 mb-0">
                An error occurred while processing your request.
            </p>

            @if (Model?.ShowRequestId == true)
            {
                <div class="mt-3 text-white-50">
                    Request ID: <code class="text-white">@Model.RequestId</code>
                </div>
            }

            <div class="mt-4">
                <a asp-controller="Home" asp-action="Index" class="btn btn-outline-info">
                    Back to Home
                </a>
            </div>
        </div>
    </div>
</div>