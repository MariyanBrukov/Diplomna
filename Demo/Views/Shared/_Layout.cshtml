@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PC Junkie</title>

    <!-- Bootstrap / Icons / Fonts -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet" />

    <style>
        :root {
            --primary-accent: #61dafb;
            --background-main: #181c27;
            --background-card: #212633;
            --text-main: #f1f3f6;
            --text-muted: #cfd2d8;
            --border-soft: rgba(255, 255, 255, 0.08);
        }

        body {
            font-family: 'Inter', sans-serif;
            background: radial-gradient(circle at 25% 25%, #1a1f2d, #111522);
            color: var(--text-main);
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        /* Navbar */
        nav.navbar {
            background: rgba(34, 39, 54, 0.9);
            backdrop-filter: blur(12px);
            border-bottom: 1px solid var(--border-soft);
            box-shadow: 0 0 25px rgba(0, 0, 0, 0.5);
        }

        .navbar-brand {
            font-weight: 700;
            font-size: 1.4rem;
            color: var(--primary-accent) !important;
            letter-spacing: 0.5px;
        }

        .navbar-nav .nav-link {
            color: var(--text-muted) !important;
            margin: 0 0.4rem;
            transition: all 0.3s ease-in-out;
            font-weight: 500;
        }

            .navbar-nav .nav-link:hover {
                color: var(--primary-accent) !important;
                transform: translateY(-2px);
            }

        .navbar-toggler {
            border-color: rgba(255, 255, 255, 0.3);
        }

        /* Layout */
        .content-wrapper {
            flex: 1;
            padding: 2.5rem 1.5rem;
        }

        /* Cards */
        .card-glow {
            background: var(--background-card);
            border: 1px solid var(--border-soft);
            border-radius: 16px;
            box-shadow: 0 0 15px rgba(97, 218, 251, 0.1);
            transition: all 0.3s ease;
            color: var(--text-main);
        }

            .card-glow:hover {
                box-shadow: 0 0 30px rgba(97, 218, 251, 0.35);
                transform: translateY(-3px);
            }

        /* Buttons */
        .btn-fancy {
            background: linear-gradient(135deg, var(--primary-accent), #007bff);
            border: none;
            border-radius: 50px;
            color: #fff;
            padding: 0.6rem 1.4rem;
            transition: all 0.25s ease;
            font-weight: 600;
            letter-spacing: 0.3px;
        }

            .btn-fancy:hover {
                background: linear-gradient(135deg, #00b4d8, #0a58ca);
                transform: scale(1.05);
            }

        /* Table styling */
        .table-dark-custom {
            background: rgba(36, 40, 56, 0.9);
            border-radius: 10px;
            overflow: hidden;
            color: var(--text-main);
        }

            .table-dark-custom th {
                color: var(--primary-accent);
                background-color: rgba(255, 255, 255, 0.05);
            }

            .table-dark-custom tr:hover {
                background: rgba(97, 218, 251, 0.08);
            }

        /* Footer */
        footer {
            margin-top: auto;
            background: rgba(28, 32, 45, 0.95);
            color: var(--text-muted);
            padding: 1.5rem 0;
            text-align: center;
            font-size: 0.9rem;
            border-top: 1px solid var(--border-soft);
        }

            footer a {
                color: var(--primary-accent);
                text-decoration: none;
            }

                footer a:hover {
                    text-decoration: underline;
                }

        a {
            text-decoration: none;
            color: var(--primary-accent);
        }

            a:hover {
                text-decoration: underline;
            }

        /* Animations */
        .fade-in {
            animation: fadeIn 0.5s ease-out;
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(10px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark py-3">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <i class="fa-solid fa-computer"></i> PC Junkie
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="mainNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index"><i class="fa-solid fa-house"></i> Home</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Builds" asp-action="Index"><i class="fa-solid fa-screwdriver-wrench"></i> My Builds</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Builds" asp-action="Create"><i class="fa-solid fa-plus-circle"></i> New Build</a></li>

                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-info" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown">
                                    <i class="fa-solid fa-user"></i> @UserManager.GetUserName(User)
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end bg-dark text-light">
                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="post" class="px-3 py-2">
                                            <button type="submit" class="btn btn-sm btn-outline-danger w-100">
                                                <i class="fa-solid fa-right-from-bracket"></i> Logout
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="Login"><i class="fa-solid fa-right-to-bracket"></i> Login</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="Register"><i class="fa-solid fa-user-plus"></i> Register</a></li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main class="content-wrapper fade-in">
        <div class="container">
            @RenderBody()
        </div>
    </main>

    <footer>
        <div class="container">
            <p>&copy; @DateTime.Now.Year - <a asp-controller="Home" asp-action="Index">PC Junkie</a> · Crafted with 💻 & Bootstrap 5</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
